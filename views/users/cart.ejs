                            <div class="coupon_inner">
                                <div class="cart_subtotal">
                                    <p>Subtotal</p>
                                    <%if (cart){%>
                                            
                                    <p class="cart_amount" id="carttotal2">Rs.<%=cart.billTotal%>.00</p>
                                </div>
                                <div class="cart_subtotal ">
                                    <p>Shipping</p>
                                    <%if(cart.shipping>0){%>
