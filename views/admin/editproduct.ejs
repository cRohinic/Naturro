    <script>
        document.addEventListener('DOMContentLoaded', function () {
    const nameInput = document.getElementById('product_name');
    const descriptionInput = document.getElementById('product_description');
    const priceInput = document.getElementById('regular_price');
    const discountPriceInput = document.getElementById('discount_price');
    const stockInput = document.getElementById('stock_count');
    const imagesInput = document.getElementById('product_images');

    nameInput.addEventListener('input', function () {
        if (this.value.trim() !== '') {
            clearError('nameError');
        }
    });

    descriptionInput.addEventListener('blur', () => validateInput('product_description', null, 'descriptionError', 'Description'));
    priceInput.addEventListener('blur', () => validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price'));
    discountPriceInput.addEventListener('blur', () => validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price'));
    stockInput.addEventListener('blur', () => validateInput('stock_count', /^(100|[0-9]{1,2})$/, 'stockError', 'Stock'));
    imagesInput.addEventListener('change', function(e) {
        validateImages(e, 'imagesError');
    });
});

function validateForm() {
    const isValidName = validateInput('product_name', /^[A-Z][^\d\s]{0,98}$/, 'nameError', 'Product Name');
    const isValidDescription = validateInput('product_description', null, 'descriptionError', 'Description');
    const isValidPrice = validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price');
    const isValidDiscountPrice = validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price');
    const isValidStock = validateInput('stock_count', /^(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-9]{2}|300)$/, 'stockError', 'Stock');
    const isValidCategory = validateCategory(); // Validate category

    if (!isValidName || !isValidDescription || !isValidPrice || !isValidDiscountPrice || !isValidStock || !isValidCategory) {
        document.getElementById('mainError').innerText = 'Cannot submit form. Please fix errors.';
        return false;
    }
    return true;
}

function validateInput(inputId, pattern, errorId, errorMessage) {
    const inputValue = document.getElementById(inputId).value.trim();
    const errorElement = document.getElementById(errorId);

    if (inputValue === '') {
        errorElement.innerText = errorMessage + ' is required.';
        return false;
    } else if (!pattern.test(inputValue)) {
        errorElement.innerText = 'Please enter a valid ' + errorMessage.toLowerCase() + '.';
        return false;
    } else {
        errorElement.innerText = '';
        return true;
    }
}



function validateCategory() {
            const categoryInputs = document.querySelectorAll('input[name="category"]:checked');
            const categoryError = document.getElementById('categoryError');

            if (categoryInputs.length === 0) {
                categoryError.innerText = 'Please select at least one category.';
                return false;
            } else {
                categoryError.innerText = '';
                return true;
            }
        }
function clearError(errorId) {
    document.getElementById(errorId).textContent = '';
}



function displaySelectedImages(input) {
    const selectedImagesContainer = document.getElementById('selectedImagesContainer');
    selectedImagesContainer.innerHTML = '';
    const files = input.files;
   
    for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const imageContainer = document.createElement('div');
        imageContainer.classList.add('image-container');
        const image = document.createElement('img');
        image.src = URL.createObjectURL(file);
        image.height = 60;
        image.width = 60;
        const closeButton = document.createElement('button');
        closeButton.innerHTML = '&times;';
        closeButton.classList.add('close-button');
        closeButton.addEventListener('click', function() {
            imageContainer.remove();
            const newFileList = Array.from(input.files).filter(f => f !== file);
            updateFileInput(input, newFileList);
        });
   
        image.addEventListener('click', function() {
            showCropperModal(file, imageContainer, input);
        });
        imageContainer.appendChild(image);
        imageContainer.appendChild(closeButton);
        selectedImagesContainer.appendChild(imageContainer);
    }
}

function showCropperModal(file, imageContainer, input) {
    const modal = document.getElementById('cropperModal');
    const image = document.getElementById('image');
    const reader = new FileReader();
    reader.onload = function(e) {
        image.src = e.target.result;
        modal.style.display = 'block';
        const cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 1,
            autoCropArea: 1,
        });
        document.getElementById('cropButton').addEventListener('click', function() {
            const canvas = cropper.getCroppedCanvas();
            canvas.toBlob(function(blob) {
                const croppedFile = new File([blob], file.name, { type: 'image/png', lastModified: new Date().getTime() });
                const croppedImage = document.createElement('img');
                croppedImage.src = URL.createObjectURL(croppedFile);
                croppedImage.height = 60;
                croppedImage.width = 60;
                imageContainer.innerHTML = '';
                imageContainer.appendChild(croppedImage);
               
                const newFileList = Array.from(input.files).map(f => f === file ? croppedFile : f);
                updateFileInput(input, newFileList);
               
                modal.style.display = 'none';
                cropper.destroy();
            }, 'image/png');
        });
        document.getElementById('cancelCropButton').addEventListener('click', function() {
            modal.style.display = 'none';
            cropper.destroy();
        });
    };
    reader.readAsDataURL(file);
}

function updateFileInput(input, files) {
    const dataTransfer = new DataTransfer();
    files.forEach(file => {
        dataTransfer.items.add(file);
    });
    input.files = dataTransfer.files;
}

function handleFileInputChange(event) {
    const input = event.target;
    displaySelectedImages(input);
}


function addImageToPage(url) {
    const img = document.createElement('img');
    img.src = url;
    img.height = 60;
    img.width = 60;
    const imageContainer = document.createElement('div');
    imageContainer.className = 'image-container';
    imageContainer.appendChild(img);

    const deleteIcon = document.createElement('a');
    deleteIcon.href = '#';
    deleteIcon.className = 'delete-icon';
    deleteIcon.innerHTML = '<span aria-hidden="true">&times;</span>';
    deleteIcon.onclick = function(e) {
        e.preventDefault();
        removeImage(imageContainer, url);
    };

    imageContainer.appendChild(deleteIcon);
    document.getElementById('imagePreview').appendChild(imageContainer);
}

function removeImage(container, url) {
    container.remove();
    const index = croppedImages.findIndex(file => URL.createObjectURL(file) === url);
    if (index > -1) {
        croppedImages.splice(index, 1);
    } else {
        const existingIndex = existingImages.indexOf(url);
        if (existingIndex > -1) {
            existingImages.splice(existingIndex, 1);
        }
    }
}

function getFormData() {
    const formData = new FormData();
    croppedImages.forEach((file, index) => {
        formData.append('newImages', file, file.name);
    });
    existingImages.forEach((url, index) => {
        formData.append('existingImages', url);
    });
    return formData;
}

