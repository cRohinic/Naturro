    <script>
document.addEventListener('DOMContentLoaded', function () {
    initializeImageHandling();
    setupEventListeners();
});

function setupEventListeners() {
    document.getElementById('product_name').addEventListener('input', () => validateInput('product_name', /^[A-Za-z][A-Za-z0-9\s]{0,98}$/, 'nameError', 'Product Name'));
    document.getElementById('product_description').addEventListener('blur', () => validateInput('product_description', null, 'descriptionError', 'Description'));
    document.getElementById('regular_price').addEventListener('blur', () => validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price'));
    document.getElementById('discount_price').addEventListener('blur', () => validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price'));
    document.getElementById('stock_count').addEventListener('blur', () => validateInput('stock_count', /^(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-9]{2}|300)$/, 'stockError', 'Stock'));
    document.getElementById('product_images').addEventListener('change', handleFileInputChange);
}

function validateForm() {
    const validations = [
        validateInput('product_name', /^[A-Za-z][A-Za-z0-9\s]{0,98}$/, 'nameError', 'Product Name'),
        validateInput('product_description', null, 'descriptionError', 'Description'),
        validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price'),
        validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price'),
        validateInput('stock_count', /^(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-9]{2}|300)$/, 'stockError', 'Stock'),
        validateCategory()
    ];

    if (validations.some(v => !v)) {
        document.getElementById('mainError').innerText = 'Cannot submit form. Please fix errors.';
        return false;
    }
    return true;
}

function validateInput(inputId, pattern, errorId, errorMessage) {
    const inputValue = document.getElementById(inputId).value.trim();
    const errorElement = document.getElementById(errorId);

    if (inputValue === '') {
        errorElement.innerText = `${errorMessage} is required.`;
        return false;
    } else if (pattern && !pattern.test(inputValue)) {
        errorElement.innerText = `Please enter a valid ${errorMessage.toLowerCase()}.`;
        return false;
    } else {
        errorElement.innerText = '';
        return true;
    }
}

function validateCategory() {
    const categorySelect = document.querySelector('select[name="category"]');
    const categoryError = document.getElementById('categoryError');
    if (!categorySelect.value) {
        categoryError.innerText = 'Please select a category.';
        return false;
    } else {
        categoryError.innerText = '';
        return true;
    }
}



