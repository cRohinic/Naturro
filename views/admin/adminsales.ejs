        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Sales Report</h2>
                <div class="button-container" style="display: flex; justify-content: center; gap: 10px; margin-top: 20px;">
                    <button onclick="downloadExcel()" class="btn btn-primary" style="width: 200px; height: 45px;">Download Excel Sheet</button>
                    <button onclick="downloadPDF()" class="btn btn-primary" style="width: 200px; height: 45px;">Download PDF</button>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="col-lg-12">
                        <header class="border-bottom mb-4 pb-4">
                            <p id="custmerror" class="text-danger"></p>
                            <div class="row">
                                <div class="col-lg-2">
                                    <input type="date" id="startDate" class="form-control" max="<%= new Date().toISOString().split('T')[0] %>">
                                </div>
                                <div class="col-lg-2">
                                    <input type="date" id="endDate" class="form-control" max="<%= new Date().toISOString().split('T')[0] %>">
                                    <div id="validationError" class="text-danger"></div>
                                </div>
                                <div class="col-lg-2">
                                    <button style="width: 200px; height: 45px; margin-left: 10px;" onclick="searchByDate()" class="btn btn-primary">Search</button>
                                </div>
            
                                <div class="col-lg-2" style="margin-left: auto; margin-right: 0;">
                                    <select class="form-select" id="sort" style="width: 200px; height: 45px;">
                                        <option value="All">All</option>
                                        <option value="Day">Day</option>
                                        <option value="Week">Week</option>
                                        <option value="Month">Month</option>
                                        <option value="Year">Year</option>
                                    </select>
                                </div>
                                <div class="col-lg-2">
                                    <button style="width: 200px;" onclick="sortByPeriod()" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </header>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover" id="pdfTable">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Email</th>
                            <th>Coupon</th>
                            <th>Discount</th>
                            <th>Paid</th>
                            <th class="text-end">Method</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (order.length > 0) { %>
                            <% order.forEach(function(order) { %>
                                <tr>
                                    <td><b><%= order.oId %></b></td>
                                    <td><%= order.orderDate %></td>
                                    <td><%= order.user.email %></td>
                                    <% if (order.coupon !== "nil") { %>
                                        <td><%= order.coupon %></td>
                                        <td class="alert-warning"><%= order.discount %> % discount Applied</td>
                                    <% } else { %>
                                        <td>No Coupon Applied</td>
                                        <td>No discount Applied</td>
                                    <% } %>
                                    <td>₹ <%= order.billTotal %></td>
                                    <td class="text-end">
                                        <div class="icontext">
                                            <span class="text text-muted" style="font-size: small;"><%= order.paymentMethod %></span>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="alert-warning text-center"><b>No Orders Found</b></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>

