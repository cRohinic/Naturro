    <script>
        function validateForm(productId) {
            const offerInput = document.getElementById('offerInput' + productId);
            const dateInput = document.getElementById('dateInput' + productId);
            const offerError = document.getElementById('offerError' + productId);
            const dateError = document.getElementById('dateError' + productId);

            let isValid = true;
            if (offerInput.value < 2 || offerInput.value > 90) {
                offerError.innerHTML = 'Please enter a valid discount between 2% and 90%.';
                isValid = false;
            } else {
                offerError.innerHTML = '';
            }

            if (!dateInput.value) {
                dateError.innerHTML = 'Please select a valid expiration date.';
                isValid = false;
            } else {
                dateError.innerHTML = '';
            }

            return isValid;
        }

        function validateCategoryForm(categoryId) {
            const categoryOfferInput = document.getElementById('categoryOfferInput' + categoryId);
            const categoryDateInput = document.getElementById('categoryDateInput' + categoryId);
            const categoryOfferError = document.getElementById('categoryOfferError' + categoryId);
            const categoryDateError = document.getElementById('categoryDateError' + categoryId);

            let isValid = true;
            if (categoryOfferInput.value < 2 || categoryOfferInput.value > 90) {
                categoryOfferError.innerHTML = 'Please enter a valid discount between 2% and 90%.';
                isValid = false;
            } else {
                categoryOfferError.innerHTML = '';
            }

            if (!categoryDateInput.value) {
                categoryDateError.innerHTML = 'Please select a valid expiration date.';
                isValid = false;
            } else {
                categoryDateError.innerHTML = '';
            }

            return isValid;
        }
    </script>
</body>
